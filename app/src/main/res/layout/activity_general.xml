<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2B1E28"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/aclonica"
        android:text="App store"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/general_image"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="480dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/general_photo_activity" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="222dp"
        android:layout_height="85dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="cursive"
        android:text="Stark electronic store"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/app_store"
        app:layout_constraintEnd_toEndOf="@+id/general_image"
        app:layout_constraintStart_toStartOf="@+id/general_image"
        app:layout_constraintTop_toBottomOf="@+id/general_image" />

</androidx.constraintlayout.widget.ConstraintLayout>